<html>

<head>
    <%include ./partials/head %>
</head>

<body>
    <header>
        <%include ./partials/header %>
    </header>

    <div class="row">
        <main class="col-12">
   

            <h1>I'm Ready to Challenge Myself</h1>
            <form action="#" method="POST">
                <div>
                    <label for="firstname">First Name</label>
                    <input type="text" id="firstname" name="firstName" placeholder="John" required>
                </div>
                <div>
                    <label for="lastname">Last Name</label>
                    <input type="text" id="lastname" name="lastName" placeholder="Smith" required>
                </div>
                <div>
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" placeholder="john.smith@gmail.com" required>
                </div>
                <div>
                    <label for="username">Username</label>
                    <input type="text" id="username" name="username" placeholder="johnnybravo" required>
                </div>
                <div>
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" placeholder="At least 8 characters">
                </div>
                <button type="submit" class="submit-button">Create New Account</button>   
            </form>

        </main>


    </div>
    <%include ./partials/scripts %>
</body>

</html>